import numpy
import matplotlib
import matplotlib.pyplot as plt


def getRotationMatrix(rotation):

    sinrot = numpy.sin(rotation)
    cosrot = numpy.cos(rotation)
    return numpy.array([[cosrot, -sinrot],[sinrot, cosrot]])

def createNormDistData(samples, mean=(0,0), var=(1,1), rotation=0):
    cov =   numpy.array([[var[0],-0],
             [-0,var[1]]])

    points = numpy.random.multivariate_normal(mean,cov,(samples))

    if not rotation==0:
        return numpy.dot(getRotationMatrix(rotation),points.T).T
    else:
        return points



if __name__ == '__main__':


    a1 = createNormDistData(3000, var=(20,1), rotation = numpy.pi/2)
    b1 = createNormDistData(3000, mean=(5,10), var=(10,1), rotation = numpy.pi/2)
    a2 = createNormDistData(3000, mean=(5,20),var=(10,1), rotation = numpy.pi/2)
    b2 = createNormDistData(3000, mean=(0,30), var=(20,1), rotation = numpy.pi/2)

    classa = numpy.vstack([a1,a2])
    classb = numpy.vstack([b1,b2])


    fig = plt.figure()
    ax = fig.add_subplot(111, aspect='equal')
    ax.hold(True)
    ax.plot(classa[:,0], classa[:,1], '1b',classb[:,0], classb[:,1], '2m')
    ax.set_title('Data Input')

    plt.show()