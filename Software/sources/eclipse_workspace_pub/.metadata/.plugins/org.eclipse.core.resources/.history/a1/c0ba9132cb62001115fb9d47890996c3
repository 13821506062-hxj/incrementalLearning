import numpy
import matplotlib
import matplotlib.pyplot as plt


def getRotationMatrix(rotation):

    sinrot = numpy.sin(rotation)
    cosrot = numpy.cos(rotation)
    return numpy.array([[cosrot, -sinrot],[sinrot, cosrot]])

def createNormDistData(samples, mean=(0,0), var=(1,1), rotation=0):
    cov =   numpy.array([[var[0],-0],
             [-0,var[1]]])

    points = numpy.random.multivariate_normal(mean,cov,(samples))

    if not rotation==0:
        return numpy.dot(getRotationMatrix(rotation),points.T).T
    else:
        return points



if __name__ == '__main__':


    samples = createNormDistData(3000, var=(10,1), rotation = 0)

    fig = plt.figure()
    ax = fig.add_subplot(111, aspect='equal')
    ax.hold(True)
    ax.plot(samples[:,0], samples[:,1], '1b',)
    ax.set_title('Data Input')

    plt.show()